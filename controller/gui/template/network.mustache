<h1>Network</h1>

<dl>
    <dt>Internet</dt>
    <dd>
    {{#internet_connected}}Connected{{/internet_connected}}
    {{^internet_connected}}Not connected{{/internet_connected}}
    </dd>
</dl>

<h2>Services</h2>

{{#services}}
    <details class="d-Network__ServiceDetail">
        <summary>
            {{name}}

            <span class="d-Network__ServiceStrength">
                {{strength}}
            </span>
        </summary>

        <pre>{{properties}}</pre>

        {{^connected}}
        <form action="/network/{{id}}/connect" method="post">
            <input type="text" name="passphrase">
            <input type="submit" value="Connect">
        </form>
        {{/connected}}

        {{#connected}}
        <form action="/network/{{id}}/remove" method="post">
            <input type="submit" value="Remove">
        </form>
        {{/connected}}

    </details>
{{/services}}
{{^services}}
    No services available.
{{/services}}
