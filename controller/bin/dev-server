#!/usr/bin/env bash
set -euo pipefail
cd $(dirname "$0")/..

trap bin/stop-server EXIT

bin/watch-command || true

watchman-make \
  --pattern \
    'server/**' \
    'bindings/**' \
    'gui/**' \
    'proxy/**' \
    dune \
    Changelog.md \
  --settle \
    0.5 \
  --run \
    "bin/watch-command"
