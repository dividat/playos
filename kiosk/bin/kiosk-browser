#!/usr/bin/env python

import argparse
import os

import kiosk_browser

default_toggle_parameters_key = 'CTRL+SHIFT+F12'

parser = argparse.ArgumentParser(
    prog='kiosk-browser',
    description='Cycle through two urls in kiosk mode. Allow login to captive portals.',
    epilog='Additional browser debugging environment variables can be found under https://doc.qt.io/qt-5/qtwebengine-debugging.html'
)

parser.add_argument(
    '--toggle-parameters',
    dest='toggle_parameters_key',
    default=default_toggle_parameters_key,
    help=
    'Keyboard combination to toggle parameters. (Default: "%s")'
    % default_toggle_parameters_key)

parser.add_argument('kiosk_url', help='Kiosk URL')
parser.add_argument('parameters_url', help='Parameters URL')

args = parser.parse_args()

# try:
kiosk_browser.start(args.kiosk_url, args.parameters_url, args.toggle_parameters_key)

# except InvalidUrl as error:
#   parser.error(error)
# except NoUrl as error:
#   parser.error(error)
